								<TextBlock Text="{Binding Name}" Style="{DynamicResource CommonTextStyle}"/>
							</StackPanel>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

			</StackPanel>
		</mah:WindowCommands>
